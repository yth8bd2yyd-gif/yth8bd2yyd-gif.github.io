            "‰Ω†ÁöÑÂπ∏Á¶èÊòØÊàëÊúÄÂú®ÊÑèÁöÑ‰∫ãÊÉÖ",
            "Ë¶ÅÁõ∏‰ø°ÔºåÊúâ‰∫∫ÁúüÁöÑÂæàÂú®‰πé‰Ω†",
            "‰Ω†ÁöÑÂ≠òÂú®ËÆ©ÊàëÁöÑ‰∏ñÁïåÊõ¥ÁæéÂ•Ω",
            "Âà´Â§™ÂãâÂº∫Ôºå‰Ω†ÁöÑÊÑüÂèóÊúÄÈáçË¶Å",
            "Êàë‰ºö‰∏ÄÁõ¥ËÆ∞ÂæóÂÖ≥ÂøÉ‰Ω†ÁöÑÁÇπÁÇπÊª¥Êª¥",
            "‰Ω†ÂÄºÂæóË¢´Â•ΩÂ•ΩÂØπÂæÖÔºåÂåÖÊã¨Ë¢´Ëá™Â∑±",
            "Êó†ËÆ∫‰ΩïÊó∂Ôºå‰Ω†ÈÉΩ‰∏çÊòØ‰∏Ä‰∏™‰∫∫",
            "‰Ω†ÁöÑÂπ∏Á¶èÔºåÊòØÊàëÊúÄÁúüËØöÁöÑÁ•ùÊÑø",
            "Ë¶ÅËÆ∞ÂæóÔºå‰Ω†Ê∞∏ËøúÈÉΩË¢´ÂÖ≥ÂøÉÁùÄ",
            "‰Ω†ÁöÑÂø´‰πêÔºåÊòØÊàëÊúÄÊÉ≥ÁúãÂà∞ÁöÑ",
            "Âà´Â§™ËæõËã¶Ôºå‰Ω†ÁöÑÂÅ•Â∫∑ÊúÄÈáçË¶Å",
            "Êàë‰ºö‰∏ÄÁõ¥ËÆ∞ÂæóÔºåË¶ÅÂ•ΩÂ•ΩÂÖ≥ÂøÉ‰Ω†",
            "‰Ω†ÁöÑ‰∏ÄÂàáÔºåÈÉΩÊúâ‰∫∫ÈªòÈªòÂú®ÊÑè",
            "Ë¶ÅÁõ∏‰ø°Ôºå‰Ω†ÂßãÁªàË¢´Ê∏©ÊüîÂØπÂæÖ",
            "Êó†ËÆ∫Êô¥Èõ®ÔºåÊàëÁöÑÂÖ≥ÂøÉÈÉΩ‰∏ç‰ºöÂèò",
            "‰Ω†ÁöÑÊØè‰∏™Êó•Â≠êÔºåÈÉΩÊúâ‰∫∫ÊÉ¶ËÆ∞",
            "Ë¶ÅÂ•ΩÂ•ΩÁîüÊ¥ªÔºåÂõ†‰∏∫‰Ω†Âú®Ë¢´ÁèçÊÉú",
            "Âà´ÊÄÄÁñëÔºå‰Ω†ÂßãÁªàË¢´Ê∑±Ê∑±Âú®‰πéÁùÄ"
        ];

        // 30ÁßçÊ∏©ÊöñÁöÑËÉåÊôØËâ≤
        const bgColors = [
            'rgba(255,182,193,0.92)', 'rgba(135,206,235,0.92)', 'rgba(173,216,230,0.92)',
            'rgba(176,196,222,0.92)', 'rgba(176,224,230,0.92)', 'rgba(224,255,255,0.92)',
            'rgba(240,248,255,0.92)', 'rgba(240,255,255,0.92)', 'rgba(144,238,144,0.92)',
            'rgba(230,230,250,0.92)', 'rgba(255,255,224,0.92)', 'rgba(221,160,221,0.92)',
            'rgba(255,127,80,0.92)', 'rgba(255,228,196,0.92)', 'rgba(127,255,212,0.92)',
            'rgba(255,228,225,0.92)', 'rgba(240,255,240,0.92)', 'rgba(255,240,245,0.92)',
            'rgba(253,245,230,0.92)', 'rgba(204,255,204,0.92)', 'rgba(204,204,255,0.92)',
            'rgba(255,204,204,0.92)', 'rgba(204,255,255,0.92)', 'rgba(255,255,204,0.92)',
            'rgba(255,204,255,0.92)', 'rgba(204,255,204,0.92)', 'rgba(255,221,173,0.92)',
            'rgba(173,221,255,0.92)', 'rgba(221,173,255,0.92)', 'rgba(255,173,204,0.92)'
        ];

        const tipElements = [];
        const bgMusic = document.getElementById('bgMusic');
        const musicControl = document.getElementById('musicControl');
        let isPlaying = false;
        let currentTipIndex = 0;
        const MAX_TIP_COUNT = 80;
        const TIP_LIFETIME = 20000;
        const BOTTOM_TIP_LIFETIME = 15000;
        const BOTTOM_THRESHOLD = 120;
        const CREATE_INTERVAL = 1000;
        const SIDE_MARGIN = 15;
        const AVOID_OVERLAP_DISTANCE = 60;

        // Èü≥‰πêÊéßÂà∂
        function fadeInMusic() {
            let volume = 0;
            bgMusic.volume = 0;
            const fadeInterval = setInterval(() => {
                if (volume < 1) {
                    volume += 0.1;
                    bgMusic.volume = volume;
                } else clearInterval(fadeInterval);
            }, 100);
        }

        function fadeOutMusic() {
            let volume = bgMusic.volume;
            const fadeInterval = setInterval(() => {
                if (volume > 0) {
                    volume -= 0.1;
                    bgMusic.volume = volume;
                } else {
                    clearInterval(fadeInterval);
                    bgMusic.pause();
                    bgMusic.currentTime = 0;
                }
            }, 100);
        }

        function toggleMusic() {
            if (isPlaying) {
                fadeOutMusic();
                musicControl.innerHTML = '<svg viewBox="0 0 24 24" fill="none" stroke-width="2" stroke="#444"><path d="M9 18V6l12 6z"></path></svg>';
            } else {
                bgMusic.play().then(() => {
                    fadeInMusic();
                    musicControl.innerHTML = '<svg viewBox="0 0 24 24" fill="none" stroke-width="2" stroke="#444"><rect x="6" y="4" width="4" height="16"></rect><rect x="14" y="4" width="4" height="16"></rect></svg>';
                }).catch(() => console.log("ÈúÄÁÇπÂáªÈ°µÈù¢ÂêéÊí≠ÊîæÈü≥‰πê"));
            }
            isPlaying = !isPlaying;
        }
        musicControl.addEventListener('click', toggleMusic);

        // È°µÈù¢Âä†ËΩΩ‰∏éÁî®Êà∑‰∫§‰∫í
        window.addEventListener('load', () => {
            bgMusic.play().catch(() => {
                musicControl.innerHTML = '<svg viewBox="0 0 24 24" fill="none" stroke-width="2" stroke="#ff6b6b"><path d="M9 18V6l12 6z"></path></svg>';
            });
        });
        document.addEventListener('click', () => {
            if (!isPlaying) {
                bgMusic.play().then(() => {
                    fadeInMusic();
                    isPlaying = true;
                    musicControl.innerHTML = '<svg viewBox="0 0 24 24" fill="none" stroke-width="2" stroke="#444"><rect x="6" y="4" width="4" height="16"></rect><rect x="14" y="4" width="4" height="16"></rect></svg>';
                }).catch(() => {});
            }
        }, { once: true });

        // ÈáçÂè†Ê£ÄÊµã
        function isOverlapping(newX, newY, newWidth, newHeight) {
            return tipElements.some(tip => {
                const tipRect = tip.getBoundingClientRect();
                const centerX1 = newX + newWidth / 2;
                const centerY1 = newY + newHeight / 2;
                const centerX2 = tipRect.left + tipRect.width / 2;
                const centerY2 = tipRect.top + tipRect.height / 2;
                const distance = Math.sqrt(Math.pow(centerX1 - centerX2, 2) + Math.pow(centerY1 - centerY2, 2));
                return distance < AVOID_OVERLAP_DISTANCE;
            });
        }

        // ‰ΩçÁΩÆÁîüÊàêÁÆóÊ≥ï
        function getNonOverlappingPosition(tipWidth, tipHeight) {
            const screenWidth = window.innerWidth;
            const screenHeight = window.innerHeight;
            const maxX = screenWidth - tipWidth - SIDE_MARGIN;
            const minX = SIDE_MARGIN;
            const maxY = screenHeight - tipHeight - SIDE_MARGIN - 80;
            const minY = SIDE_MARGIN + 40;
            
            const centerX = (minX + maxX) / 2;
            const centerY = (minY + maxY) / 2;
            const maxRadius = Math.min(maxX - centerX, maxY - centerY);
            const angleStep = Math.PI / 8;
            const radiusStep = maxRadius / 10;
            
            let radius = 0;
            let angle = 0;
            let attempts = 0;
            
            while (radius <= maxRadius && attempts < 200) {
                const x = Math.floor(centerX + radius * Math.cos(angle));
                const y = Math.floor(centerY + radius * Math.sin(angle));
                
                if (x >= minX && x <= maxX && y >= minY && y <= maxY && 
                    !isOverlapping(x, y, tipWidth, tipHeight)) {
                    return { x, y };
                }
                
                angle += angleStep;
                if (angle >= Math.PI * 2) {
                    angle = 0;
                    radius += radiusStep;
                }
                attempts++;
            }
            
            const gridCols = 8;
            const gridRows = 6;
            const cellWidth = (maxX - minX) / gridCols;
            const cellHeight = (maxY - minY) / gridRows;
            
            const gridPositions = [];
            for (let row = 0; row < gridRows; row++) {
                for (let col = 0; col < gridCols; col++) {
                    gridPositions.push({ row, col });
                }
            }
            gridPositions.sort(() => Math.random() - 0.5);
            
            for (const { row, col } of gridPositions) {
                const x = Math.floor(minX + col * cellWidth + Math.random() * cellWidth * 0.7);
                const y = Math.floor(minY + row * cellHeight + Math.random() * cellHeight * 0.7);
                
                if (!isOverlapping(x, y, tipWidth, tipHeight)) {
                    return { x, y };
                }
            }
            
            let x, y;
            attempts = 0;
            do {
                x = Math.floor(Math.random() * (maxX - minX + 1)) + minX;
                y = Math.floor(Math.random() * (maxY - minY + 1)) + minY;
                attempts++;
            } while (attempts < 100 && isOverlapping(x, y, tipWidth, tipHeight));
            
            return { x, y };
        }

        // Áà±ÂøÉ‰∏äÂçáÁâπÊïà
        function createHeartEffect(x, y, color) {
            const hearts = ['‚ù§Ô∏è', 'üíñ', 'üíó', 'üíì', 'üíû', 'üíï'];
            const heartCount = 3 + Math.floor(Math.random() * 3);
            
            for (let i = 0; i < heartCount; i++) {
                setTimeout(() => {
                    const heart = document.createElement('div');
                    heart.className = 'heart-trail';
                    heart.innerHTML = hearts[Math.floor(Math.random() * hearts.length)];
                    heart.style.left = `${x + Math.random() * 40 - 20}px`;
                    heart.style.top = `${y}px`;
                    heart.style.color = color;
                    heart.style.transform = 'translateY(0) scale(1)';
                    heart.style.opacity = '1';
                    
                    document.body.appendChild(heart);
                    
                    setTimeout(() => {
                        heart.style.transform = `translateY(-${100 + Math.random() * 50}px) scale(${0.5 + Math.random() * 0.5})`;
                        heart.style.opacity = '0';
                        
                        setTimeout(() => {
                            if (heart.parentNode) {
                                heart.parentNode.removeChild(heart);
                            }
                        }, 1500);
                    }, 10);
                }, i * 200);
            }
        }

        // ÂºπÁ™óÁîüÊàê
        function createTipBox() {
            if (tipElements.length >= MAX_TIP_COUNT) {
                const oldestTip = tipElements.shift();
                oldestTip.remove();
            }

            const tipBox = document.createElement('div');
            tipBox.className = 'tip-box';
            tipBox.textContent = tips[currentTipIndex];
            const bgColor = bgColors[currentTipIndex % bgColors.length];
            tipBox.style.backgroundColor = bgColor;
            currentTipIndex = (currentTipIndex + 1) % tips.length;

            document.body.appendChild(tipBox);
            const tipWidth = tipBox.offsetWidth;
            const tipHeight = tipBox.offsetHeight;
            document.body.removeChild(tipBox);

            const { x, y } = getNonOverlappingPosition(tipWidth, tipHeight);
            tipBox.style.left = `${x}px`;
            tipBox.style.top = `${y}px`;

            // Áà±ÂøÉ‰∏äÂçáÊ∂àÂ§±ÁâπÊïà
            const bottomDistance = window.innerHeight - y - tipHeight;
            const lifetime = bottomDistance < BOTTOM_THRESHOLD ? BOTTOM_TIP_LIFETIME : TIP_LIFETIME;
            
            setTimeout(() => {
                // ÂàõÂª∫Áà±ÂøÉÁâπÊïà
                createHeartEffect(x + tipWidth / 2, y + tipHeight / 2, bgColor.replace('0.92', '1'));
                
                // ÂºπÁ™óÊ∂àÂ§±Âä®Áîª
                tipBox.classList.add('heart-fade');
                
                setTimeout(() => {
                    const index = tipElements.indexOf(tipBox);
                    if (index !== -1) {
                        tipElements.splice(index, 1);
                        tipBox.remove();
                    }
                }, 1000);
            }, lifetime);

            document.body.appendChild(tipBox);
            tipElements.push(tipBox);
        }

        // ÂºπÁ™óÂæ™ÁéØ
        function loopTips() {
            createTipBox();
            setTimeout(loopTips, CREATE_INTERVAL);
        }
        loopTips();

        // ÂÖ≥Èó≠ÊâÄÊúâÂºπÁ™óÔºàÂ∏¶Áà±ÂøÉÁâπÊïàÔºâ
        function closeAllTips() {
            tipElements.forEach(tip => {
                const rect = tip.getBoundingClientRect();
                const x = rect.left + rect.width / 2;
                const y = rect.top + rect.height / 2;
                const color = tip.style.backgroundColor.replace('0.92', '1');
                
                createHeartEffect(x, y, color);
                tip.classList.add('heart-fade');
                
                setTimeout(() => {
                    tip.remove();
                }, 1000);
            });
            tipElements.length = 0;
            currentTipIndex = 0;
        }
        document.addEventListener('keydown', (e) => e.code === 'Space' && closeAllTips());
        document.addEventListener('click', (e) => {
            if (e.target !== musicControl && !musicControl.contains(e.target)) closeAllTips();
        });

        // Á™óÂè£Â§ßÂ∞èÂèòÂåñÊó∂ÈáçÊñ∞Â∏ÉÂ±Ä
        window.addEventListener('resize', () => {
            tipElements.forEach((tip, index) => {
                const tipWidth = tip.offsetWidth;
                const tipHeight = tip.offsetHeight;
                const { x, y } = getNonOverlappingPosition(tipWidth, tipHeight);
                tip.style.left = `${x}px`;
                tip.style.top = `${y}px`;
            });
        });
    </script>
</body>
</html>
